{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
	<div class="main container">
		<div class="row well">
			<div class="col-md-6">
				<div class="page-header">
					<h2>{% trans %}Editar Cliente{% endtrans %}</h2>
				</div>
                {{ form_start(form, { 'attr' : {'novalidate': 'novalidate', 'role' : 'form'} }) }}
                
                <div class="form-group">
                    {{ form_label(form.name, 'Nombre') }}
                    {{ form_widget(form.name, { 'attr' : {'class' : 'form-control' , 'placeholder' : 'Nombre'}}) }}
                    <span class="text-danger">{{ form_errors(form.name) }}</span>
                </div>
                
			    <div class="form-group">
			        {{ form_label(form.lastName, 'Apellido') }}
			        {{ form_widget(form.lastName, {'attr': {'class': 'form-control' , 'placeholder' : 'Apellido'}}) }}
			        <span class="text-danger">{{ form_errors(form.lastName) }}</span>
			    </div>

			    <div class="form-group">
			        {{ form_label(form.email, 'Email') }}
			        {{ form_widget(form.email, {'attr': {'class': 'form-control' , 'placeholder' : 'Correo electr√≥nico'}}) }}
			        <span class="text-danger">{{ form_errors(form.email) }}</span>
			    </div>

			    <div class="form-group">
			        {{ form_label(form.observation, 'Observaciones') }}
			        {{ form_widget(form.observation, {'attr': {'class': 'form-control' , 'placeholder' : 'Observaciones/Comentatios'}}) }}
			        <span class="text-danger">{{ form_errors(form.observation) }}</span>
			    </div>

			    <div class="form-group">
			        {{ form_label(form.groupclient, 'Grupo de clientes') }}
			        {{ form_widget(form.groupclient, {'attr': {'class': 'form-control' , 'placeholder' : 'Grupo de clientes'}}) }}
			        
			    </div>
				
			</fieldset>

		    <p>
		        {{ form_widget(form.save, {'label' : 'Guardar', 'attr': {'class': 'btn btn-success'}}) }}
		    </p>                
        
                {{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}